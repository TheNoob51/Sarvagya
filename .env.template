# =============================================================================
# Intelligent Research Assistant - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Gemini API Key (Required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# OPTIONAL API KEYS
# =============================================================================

# SerpAPI Key (Optional - for enhanced web search)
# Get from: https://serpapi.com/
# If not provided, will fallback to DuckDuckGo search
SERPAPI_KEY=your_serpapi_key_here

# Google Sheets Credentials (Optional - for research history)
# Path to your Google Service Account JSON file
# Get from: https://console.cloud.google.com/
GOOGLE_SHEETS_CREDENTIALS_PATH=path/to/your/credentials.json

# Google Sheets Configuration
GOOGLE_SHEETS_NAME=Research Assistant Data
GOOGLE_SHEETS_WORKSHEET=Research Data
GOOGLE_SHEETS_CLEANUP_DAYS=90

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# ChromaDB Configuration
CHROMA_DB_PATH=./data/chroma_db
CHROMA_COLLECTION_NAME=research_knowledge

# =============================================================================
# WEB SCRAPING CONFIGURATION
# =============================================================================

# Maximum number of concurrent web scrapes
MAX_CONCURRENT_SCRAPES=5

# Timeout for individual web scrapes (seconds)
SCRAPE_TIMEOUT=30

# Whether to respect robots.txt files
RESPECT_ROBOTS_TXT=true

# User agent string for web requests
USER_AGENT=Intelligent-Research-Assistant/1.0

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Debug mode (true/false)
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Gradio UI Configuration
GRADIO_HOST=127.0.0.1
GRADIO_PORT=7860

# =============================================================================
# RESEARCH CONFIGURATION DEFAULTS
# =============================================================================
# These can be overridden in the UI, but serve as defaults

# Default maximum number of sources to gather
DEFAULT_MAX_SOURCES=10

# Default research timeout (seconds)
DEFAULT_TIMEOUT_SECONDS=120

# Default report style (academic, casual, technical)
DEFAULT_REPORT_STYLE=academic

# Default report length (short, medium, long)
DEFAULT_REPORT_LENGTH=medium

# =============================================================================
# RATE LIMITING AND PERFORMANCE
# =============================================================================

# Maximum API requests per minute for Gemini
GEMINI_RATE_LIMIT=60

# Maximum web searches per minute
WEB_SEARCH_RATE_LIMIT=30

# Cache duration for web search results (hours)
SEARCH_CACHE_DURATION=24

# Cache duration for vector search results (hours)
VECTOR_CACHE_DURATION=1